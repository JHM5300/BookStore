<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.bookstore.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/nav_used"
        android:name="com.example.bookstore.ui.used.usedFragment"
        android:label="@string/menu_used"
        tools:layout="@layout/fragment_used" />

    <fragment
        android:id="@+id/nav_service"
        android:name="com.example.bookstore.ui.service.serviceFragment"
        android:label="@string/menu_service"
        tools:layout="@layout/fragment_service" />

</navigation>